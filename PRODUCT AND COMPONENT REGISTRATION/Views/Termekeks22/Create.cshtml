@model Keszprojekt.Models.Termekek

@{
    ViewData["Title"] = "Létrehozás";
}

<h1>Létrehozás</h1>

<h4>Termekek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Létrehozás">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Megnevezes" class="control-label"></label>
                <input asp-for="Megnevezes" class="form-control" />
